                <FontAwesomeIconView glyphName="SEND" size="20" />
            </graphic>
            <font>
                <Font name="Al Nile" />
            </font>
        </JFXButton>
        <JFXButton fx:id="btnSendGlobally" defaultButton="true" ellipsisString="" layoutX="748.0" layoutY="461.0" onAction="#sendMessageGlobally" prefHeight="35.0" prefWidth="35.0">
            <graphic>
                <FontAwesomeIconView glyphName="GLOBE" size="20" />
            </graphic>
            <font>
                <Font name="Al Nile" />
            </font>
        </JFXButton>
      <JFXTextField fx:id="tfUserText" layoutX="14.0" layoutY="454.0" onAction="#sendMessageToUser" prefHeight="39.0" prefWidth="680.0" promptText="Type your message..." style="-fx-background-color: #FFFFFF;" />
    </children>
