        <SplitPane dividerPositions="0.25" layoutX="-4.0" layoutY="-5.0" prefHeight="455.0" prefWidth="814.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="516.0" prefWidth="296.0" style="-fx-background-color: #2B2A28;">
                    <children>
                        <Label graphicTextGap="5.0" layoutX="18.0" layoutY="6.0" prefHeight="44.0" prefWidth="171.0" text="Users Online" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                            <opaqueInsets>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </opaqueInsets>
                        </Label>
                        <JFXListView fx:id="lvUsersList" layoutX="-1.0" layoutY="47.0" onMouseClicked="#selectUser" prefHeight="407.0" prefWidth="200.0" />
                        <Line endX="85.0" layoutX="107.0" layoutY="46.0" startX="-100.0" stroke="WHITE" />
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
